import '../styles/terminal.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eric Sun's Site</title>
</head>
<body>
    <div class="theme-switch">
        <span id="light-mode" class="theme-option">light</span>
        <span class="theme-separator"> / </span>
        <span id="dark-mode" class="theme-option active">dark</span>
    </div>
    <div class="terminal-container">
        <div id="output">
            <div id="initial-content">
               <pre class="ascii-art">
